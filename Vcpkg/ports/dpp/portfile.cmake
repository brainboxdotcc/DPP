vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO brainboxdotcc/DPP
	REF 4f043a39b94cbca95c66fd8d51a516cf9cf81b93
	SHA512 162aea4dc1448db97b8080cf062213a4e4adb31c8cbaa188344fdd0266d83b3916f8f50885873c7b541e9f97783213f45067ba8f21a8d925907bb31c35e54e41
