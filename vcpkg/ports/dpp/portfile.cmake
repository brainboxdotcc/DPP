vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO brainboxdotcc/DPP
	REF fd872e403639fb56ce564256ef301f408b6f801f
	SHA512 198efc91991851d20797fea60c5f614a94d7ad1331f4929fe5db7d0e0098b1cb81bd2902aea7ccde4912dcb1744e027d010077d6862890df7545be2a2a790049
	HEAD_REF master
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

vcpkg_cmake_install()

